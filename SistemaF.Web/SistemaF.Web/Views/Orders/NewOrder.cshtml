@model Sistema.Web.ViewModels.OrderView

    <p>
        @Html.ActionLink("Nuevo Producto", "AddProduct", new { }, new { @class = "btn btn-primary" })
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Article_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Value)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        for (int i = 0; i < Model.Products.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Products[i].Article_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Products[i].Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Products[i].Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Products[i].Value)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.Products[i].ArtC_Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = Model.Products[i].ArtC_Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.Products[i].ArtC_Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }
    </table>
