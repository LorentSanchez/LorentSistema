@model IEnumerable<Sistema.Web.Data.Entities.Brand>

@{
    ViewBag.Title = "Index";
}

<h2>Marcas</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Brand_Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Brand_Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Brand_Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
