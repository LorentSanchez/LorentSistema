@model IEnumerable<Sistema.Web.Data.Entities.Document>

@{
    ViewBag.Title = "Index";
}

<h2>Documentos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Documento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Documento)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Document_Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Document_Id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Document_Id }, new { @class = "btn btn-danger" })
           
        </td>
    </tr>
}

</table>
